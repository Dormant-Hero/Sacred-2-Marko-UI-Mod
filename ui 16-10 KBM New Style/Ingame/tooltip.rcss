.bottom-margin
{
    height: 16dp;
}

.bottom-margin-large
{
    height: 24dp;
}

.tooltip-data
{
    display: flex;
    justify-content: start;
    align-items: center;
    flex-direction: column;
    text-anchor: start;
}

#dynamic-bonus-stats,
#dynamic-bonus-stats-secondary,
#dynamic-mods-stats,
#set-bonus
{
    display: flex;
    width: 90%;
    flex-direction: column;
    gap:5dp;
}

.input-prompts
{
    display: flex;
    width: 90%;
    flex-direction: column;
    gap:5dp;
    height: auto;
}

.input-prompt-line
{
    display: flex;
    width: 100%;
    height: 15dp;
    flex-direction: row;
    justify-content: flex-start;
    gap:10dp;
    font-family: "Inria Sans";
    font-size: 1.9vh;
    color: primary-element-label;
    margin-top: 5dp;
}

.separator
{
    width: 100%;
    decorator: image(skills-dooted-line-long);
    height: 1dp;
}

.separator-small
{
    width: 90%;
    decorator: image(skills-dooted-line-short);
    height: 1dp;
}

.bonus-stat-container
{
    display: flex;
    width: 100%;
    height: auto;
    font-family: Inria Sans;
    font-size: 1.9vh;
    line-height: 1.9vh;
    justify-content: space-between;
    align-items: center;
}

.stat-name
{
    font-family: Inria Sans;
    color: secondary-list-label;
    font-size: 2.0vh;
    width: 80%;
    height: auto;
    text-anchor: start;
}

.defence-damage-container
{
    display: flex;
    flex-direction: row;
    margin-top: 5dp;
    width: 100%;
}

#damage-values,
#defence-values
{
    height: 40dp;
    width: 85%;
    display: flex;
    flex-direction: row;
    margin-top: 10dp;

}

.stat-value
{
    color: secondary-list-value;
    width: 35%;
    text-align: right;
}

.stat-value-not-learned
{
    color: secondary-list-value;
    width: 80%;
    text-align: right;
}

.primary-value-text
{
    font-family: Inria Sans;
    color: secondary-list-value;
    font-size: 2.3vh;
    width: 40%;
}

.defence-damage-type-bar
{
    position: absolute;
    left: 30dp;
    width:190dp;
    height: 1vh;
}

.defence-damage-bars
{
    height: 15dp;
    display: flex;
}

.damage-values-text-container,
.defence-values-text-container
{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: start;
    text-anchor: start;
    height: 30dp;
    width: 60%;
    font-size: 1.8vh;
}


