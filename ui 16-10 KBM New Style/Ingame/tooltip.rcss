@spritesheet Inventory-tooltip-bg
{
    src: "Textures\Spritesheets\Backgrounds\Inventory-tooltip-bg.dds";
    Inventory-tooltip-background-t: 0px 0px 880px 576px;
    Inventory-tooltip-frame-t: 0px 576px 880px 576px;
    Inventory-tooltip-gradient: 0px 1152px 880px 576px;
    Inventory-tooltip-frame-b: 0px 1728px 880px 208px;
    Inventory-tooltip-background-minimal: 0px 1936px 880px 11px;
    Inventory-tooltip-frame-minimal: 0px 1947px 880px 11px;
    inventory-tooltip-empty-minimal: 0px 1958px 800px 11px;
    Blacksmith-background-mask: 880px 0px 832px 416px;
    Inventory-tooltip-background-b: 880px 416px 880px 388px;
    Inventory-tooltip-background-m: 880px 804px 880px 180px;
    Inventory-tooltip-frame-m: 880px 984px 880px 180px;
    inventory-tooltip-empty-m: 880px 1164px 800px 180px;
    inventory-tooltip-empty-b: 880px 1344px 800px 132px;

}


.tooltip-background
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-background-t, Inventory-tooltip-background-m, Inventory-tooltip-background-b );
}

/* GRADIENTS*/
.rare-0-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#575164;
}
.rare-1-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#cfccad;
}

.rare-5-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#389bc1;
}

.rare-9-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#f4d174;
}

.rare-13-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#e9d14a;
}

.rare-15-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#b46722;
}

.set-gradient
{
    decorator: tiled-vertical-no-stretch( Inventory-tooltip-gradient, inventory-tooltip-empty-m, inventory-tooltip-empty-b );
    image-color:#0ea37f;
}

