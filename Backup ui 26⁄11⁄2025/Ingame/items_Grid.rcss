    pointer-events: none;
}

.background-grid-row
{
    display: flex;
    flex-direction: row;
}

.background-grid-cell {

    pointer-events: auto;
    z-index: 1;
}

.background-grid-cell:hover,
.background-grid-cell:focus-visible {
    decorator: image(Item-background-1x1-default);
    z-index: 2;
    pointer-events: auto;
}

.background-grid-cell-no-hover-feedback {

    pointer-events: auto;
    z-index: 1;
}

.background-grid-cell-no-hover-feedback:hover,
.background-grid-cell-no-hover-feedback:focus-visible {
    z-index: 2;
    pointer-events: auto;
}





