.highlight-overlay,
.inventory-item
{
    pointer-events: auto;
    position: absolute;
    z-index: 4;
}

.item-background,
.item-frame,
.item-icon
{
    width: 100%;
    height: 100%;
    position: absolute;
    pointer-events: none;
}

.item-background
{
    z-index: 4;
}

.item-icon
{
    z-index: 5;
}

.item-frame
{
    z-index: 6;
    pointer-events: none;
}

.item-quantity
{
    text-align: center;
    font-size: 16dp;
    color: white;
    position: relative;
    bottom: -11dp;
    left: 4dp;
    pointer-events: none;
    z-index: 7;
    font-family: "Inria Sans";
    color: secondary-list-value;
    font-effect: outline(2dp black);
}

.item-forge-slots-panel-horizontal
{
    z-index: 8;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    gap: 1dp;
    align-items: center;
    width: 100%;
    height: auto;
    position: relative;
    left: -17dp;
    bottom: -7dp;
    pointer-events: none;
}

.item-forge-slots-panel
{
    z-index: 8;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 1dp;
    align-items: center;
    width: 10dp;
    height: 100%;
    position: relative;
    left: 9dp;
    bottom: 5dp;
    pointer-events: none;
}

.item-forge-slot
{
    width: 20dp;
    height: 20dp;
    display: inline-block;
    z-index: 9;
    pointer-events: none;
}

.item-forge-slot-tiny
{
    width: 20dp;
    height: 20dp;
    display: flex;
    z-index: 9;
    pointer-events: none;
}

.item-forge-slot-forged-in-item
{
    width: 20dp;
    height: 20dp;
    display: block;
    z-index: 10;
    pointer-events: none;
}

.item-forge-slot-small
{
    width: 12dp;
    height: 12dp;
    display: flex;
    z-index: 9;
    pointer-events: none;
}

.item-forge-slot-forged-in-item-small
{
    width: 12dp;
    height: 12dp;
    display: block;
    z-index: 10;
    pointer-events: none;
}

.item-forge-slot-big
{
    width: 40dp;
    height: 40dp;
    display: flex;
    z-index: 9;
    pointer-events: none;
}

.item-forge-slot-forged-in-item-big
{
    width: 40dp;
